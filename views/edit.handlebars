<div class="container mt-5">
  <form action="/restaurants/{{restaurant._id}}?_method=PUT" method="POST">
    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-file-signature pr-2"></i>餐廳名稱
      </label>
      <div class="col-md-8">
        <input type="text" class="form-control" id="validationTooltip01" placeholder="ex. 
漢來海港餐廳 巨蛋店" name="name" value="{{restaurant.name}}" required>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-search pr-2"></i>餐廳類別
      </label>
      <div class="col-md-8">
        <select class="custom-select" id="category" name="category" required>
          <option value="0">請選擇</option>
          <option value="日本料理" {{#is category '日本料理' }} selected {{/is}}>日本料理</option>
          <option value="中東料理" {{#is category '中東料理' }} selected {{/is}}>中東料理</option>
          <option value="義式餐廳" {{#is category '義式餐廳' }} selected {{/is}}>義式餐廳</option>
          <option value="美式" {{#is category '美式' }} selected {{/is}}>美式</option>
          <option value="酒吧" {{#is category '酒吧' }} selected {{/is}}>酒吧</option>
          <option value="咖啡" {{#is category '咖啡' }} selected {{/is}}>咖啡</option>
        </select>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-image pr-2"></i> 餐廳圖片
      </label>
      <div class="col-md-8">
        <input type="text" class="form-control" id="validationTooltip01"
          placeholder="ex. https://img.ltn.com.tw/Upload/business/page/800/2019/11/04/234.jpg" name="image"
          value="{{restaurant.image}}" required>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-location-arrow pr-2"></i>餐廳地址
      </label>
      <div class="col-md-8">
        <input type="text" class="form-control" id="validationTooltip01" placeholder="ex. 813高雄市左營區博愛二路777號5樓"
          name="location" value="{{restaurant.location}}" required>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-phone-square-alt pr-2"></i>餐廳電話
      </label>
      <div class="col-md-8">
        <input type="text" class="form-control" id="validationTooltip01" placeholder="ex. 07 412 8068#6" name="phone"
          value="{{restaurant.phone}}" required>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-map-marker-alt pr-2"></i>餐廳地圖
      </label>
      <div class="col-md-8">
        <input type="text" class="form-control" id="validationTooltip01"
          placeholder="ex. https://goo.gl/maps/U4ExTZKNMPEwJuFm8" name="google_map" value="{{restaurant.google_map}}"
          required>
      </div>
    </div>

    <div class="form-group form-row mb-3 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-star-half-alt pr-2"></i>餐廳評分
      </label>
      <div class="col-md-8">
        <input type="number" min="0" max="5" step="0.1" class="form-control" id="validationTooltip01"
          placeholder="請輸入餐廳評分 0 ~ 5 ex. 4.5" name="rating" value="{{restaurant.rating}}" required>
      </div>
    </div>

    <div class="form-group form-row mb-2 align-items-center">
      <label for="length" class="col-md-4 col-form-label text-center">
        <i class="fas fa-file-prescription pr-2"></i>餐廳簡介
      </label>
      <div class="col-md-8">
        <textarea class="form-control" name="description" aria-describedby="description"
          placeholder="ex. 從新鮮、豐盛到季節嚴選、在地生產，漢來海港餐廳始終以提供最優質的食材為原則，使得漢來海港餐廳成為台灣頂級百匯的代名詞。" class="col-10"
          required>{{restaurant.description}}</textarea>
      </div>
    </div>
    <div class="form-group form-row mb-2 align-items-center justify-content-center">
      <button id="submit-btn" type="submit" class="btn btn-info mt-3 mb-3">儲存</button>
    </div>
  </form>
</div>